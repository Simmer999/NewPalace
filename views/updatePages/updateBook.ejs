<section>

    <!-- <div class='spacer'></div> -->
    <form class="purpleBox" action="/updateBook" method='PATCH'>
        <!-- <input type="hidden" name="_method" value="PATCH">             -->
        <!-- This goes to the book_update function in ..api/routes/books.js. -->
    <!-- <p style="color:blue">Update and submit to save.</p> -->
    <h3 style="color:blue; padding-top: 100px;">Update and submit to save.</h4> 
    <br>           
      
        <div id="titleDiv" >
            <label for="title">Title</label>                   
            
            <br>

            <input type="hidden" name="id" value="<%= Books._id %>">
            <input class="inputClass" type="text" name='title' 
            value="<%= Books.title %>" placeholder='Enter book title' required/>
        </div>
        <br>
        <div>
            <label for="author">Author</label>
            <br>
            <input class="inputClass" type="text" name="author" 
            value="<%= Books.author %>" placeholder="Enter author" required/>
        </div>
        <br>
        <div >
            <label for="contents">Contents</label>
            <br>
            

            <!-- <script>
            document.getElementById("contentInput").innerHTML = "<%= Books.contents %>";
            </script>     -->

            <textarea autofocus autoresize  name="contents" 
            cols="60" rows="10" value="<%= Books.contents %>" required>
                <%= Books.contents %>
            </textarea>
        <br>
        <button id="updateButton" type="submit" class="xx"> Submit </button>
        <br>
        </div>
    </form>
  

